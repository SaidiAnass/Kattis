import java.util.*;

public class Test_Kattis {

    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);
        
        int sum = 0;
        int n = sc.nextInt();
        
        for(int i=0; i<n; i++) {
            
            int l = sc.nextInt();
            sum += l;
        }
        
        System.out.println(sum-n+1);
        
        sc.close();
    }

}
